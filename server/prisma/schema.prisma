generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    schemas  = ["public"]
}

model User {
  id            String    @id
  name          String
  email         String @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  sessions      Session[]
  accounts      Account[]
  profile User_Profile?

  @@map("user")
  @@schema("public")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  token     String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
  @@schema("public")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("account")
  @@schema("public")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
  @@schema("public")
}


model User_Profile {
    // id         String  @id @default(uuid()) @db.Uuid
    user_id    String  @id
    occupation String  @db.VarChar(50)
    location   String? @db.VarChar(40)
    picture    String? @db.VarChar(200)

    user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

    // Teams   Team[] // Relación implícita de muchos a muchos con Team
    teams Member[]

    Task    Task[]
    Comment Comment[]
    Event   Event[]   @relation("EventAuthor")
    Events  Event[]

    notifications    NotificationMember[]
    MessageAuthor    Message[]            @relation("MessageAuthor")
    MessageRecipient Message[]

    @@schema("public")
}

model Team {
    id          String @id @default(uuid()) @db.Uuid
    name        String @db.VarChar(50)
    description String @db.VarChar(400)

    // Members User[] // Relación implícita de muchos a muchos con User
    users Member[]

    Tasks        Task[] // Relacion inversa de uno a muchos con Task
    Event        Event[]
    Notification Notification[]
    Channel      Channel[]

    @@schema("public")
}

model Member {
    id_user String
    id_team String @db.Uuid
    role String @db.VarChar(30)

    user User_Profile @relation(fields: [id_user], references: [user_id])
    team Team @relation(fields: [id_team], references: [id], onDelete: Cascade)

    @@id([id_user, id_team])
    @@schema("public")
}

model Task {
    id             String   @id @default(uuid()) @db.Uuid
    id_team        String   @db.Uuid
    id_responsible String
    name           String   @db.VarChar(50)
    status         String   @db.VarChar(20) @default("pending")
    priority       String   @db.VarChar(20)
    type           String   @db.VarChar(30)
    due_date       DateTime @db.Date //Debe pasasrse como objeto Date() por un bug (documentacion)

    team        Team @relation(fields: [id_team], references: [id], onDelete: Cascade)
    responsible User_Profile @relation(fields: [id_responsible], references: [user_id], onDelete: SetNull)

    Subtasks Subtask[]
    Comment  Comment[]

    @@index([id_team])
    @@schema("public")
}

model Subtask {
    id      String @id @default(uuid()) @db.Uuid
    id_task String @db.Uuid
    name    String @db.VarChar(50)
    status  String @db.VarChar(20)

    task Task @relation(fields: [id_task], references: [id], onDelete: Cascade)

    @@index([id_task])
    @@schema("public")
}

model Comment {
    id        String  @id @default(uuid()) @db.Uuid
    id_task   String  @db.Uuid
    id_author String
    name      String  @db.VarChar(50)
    edited    Boolean
    content   String  @db.VarChar(300)

    task   Task @relation(fields: [id_task], references: [id], onDelete: Cascade)
    author User_Profile @relation(fields: [id_author], references: [user_id], onDelete: SetNull)

    @@schema("public")
}

model Event {
    id          String   @id @default(uuid()) @db.Uuid
    id_team     String   @db.Uuid
    id_author   String
    name        String   @db.VarChar(50)
    description String   @db.VarChar(400)
    due_date    DateTime @db.Date

    team   Team @relation(fields: [id_team], references: [id], onDelete: Cascade)
    author User_Profile @relation("EventAuthor", fields: [id_author], references: [user_id], onDelete: SetNull)

    Members User_Profile[]

    @@index([id_team])
    @@schema("public")
}

model Notification {
    id            String   @id @default(uuid()) @db.Uuid
    id_team       String   @db.Uuid
    type          String   @db.VarChar(30)
    title         String   @db.VarChar(50)
    message       String   @db.VarChar(300)
    creation_date DateTime @db.Date
    read          Boolean @default(false)

    team Team @relation(fields: [id_team], references: [id], onDelete: Cascade)

    members NotificationMember[]

    @@schema("public")
}

model NotificationMember {
    id_member       String
    id_notification String  @db.Uuid
    read            Boolean @default(false)

    member       User_Profile         @relation(fields: [id_member], references: [user_id], onDelete: Cascade)
    notification Notification @relation(fields: [id_notification], references: [id], onDelete: Cascade)

    @@id([id_member, id_notification])
    @@schema("public")
}

model Channel {
    id      String @id @default(uuid()) @db.Uuid
    id_team String @db.Uuid

    team         Team           @relation(fields: [id_team], references: [id], onDelete: Cascade)
    GroupMessage GroupMessage[]

    @@index([id_team])
    @@schema("public")
}

model Message {
    id         String   @id @default(uuid()) @db.Uuid
    id_from    String
    id_to      String
    content    String   @db.Text
    created_at DateTime @db.Timestamp(0)

    author    User_Profile @relation("MessageAuthor", fields: [id_from], references: [user_id])
    recipient User_Profile @relation(fields: [id_to], references: [user_id])

    @@schema("public")
}

model GroupMessage {
    id_channel String   @db.Uuid
    id_message String   @db.Uuid
    content    String   @db.Text
    created_at DateTime @db.Timestamp(0)

    channel Channel @relation(fields: [id_channel], references: [id])

    @@id([id_channel, id_message])
    @@schema("public")
}